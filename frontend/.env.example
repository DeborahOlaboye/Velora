# Celo Network
# For TESTNET (Sepolia):
# NEXT_PUBLIC_CELO_RPC_URL=https://rpc.ankr.com/celo_sepolia
# NEXT_PUBLIC_CHAIN_ID=11142220

# For MAINNET (Production):
NEXT_PUBLIC_CELO_RPC_URL=https://forno.celo.org
NEXT_PUBLIC_CHAIN_ID=42220

# thirdweb Configuration
# Get your client ID from: https://thirdweb.com/dashboard
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key_here

# Self Protocol (Identity Verification)
# Get your credentials from: https://www.self.inc/
NEXT_PUBLIC_SELF_PROTOCOL_APP_ID=your_self_protocol_app_id_here
SELF_PROTOCOL_SECRET=your_self_protocol_secret_here

# GoodDollar (UBI Integration)
# Documentation: https://docs.gooddollar.org/
NEXT_PUBLIC_GOODDOLLAR_ENV=development
NEXT_PUBLIC_GOODDOLLAR_CONTRACT_ADDRESS=

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/gig_worker_pool
# or MongoDB: mongodb://localhost:27017/gig_worker_pool

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Smart Contract Addresses (Update after deployment)
NEXT_PUBLIC_BENEFITS_POOL_CONTRACT_ADDRESS=

# cUSD Token Address
# Sepolia: 0x00BFD44e79FB7f6dd5887A9426c8EF85A0CD23e0
# Mainnet: 0x765DE816845861e75A25fCA122bb6898B8B1282a
NEXT_PUBLIC_CUSD_TOKEN_ADDRESS=0x765DE816845861e75A25fCA122bb6898B8B1282a

# Admin Configuration
ADMIN_WALLET_ADDRESSES=
